# Environment
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/orbit
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT (CHANGE IN PRODUCTION - run: python scripts/generate_secrets.py)
JWT_SECRET_KEY=CHANGE_ME_RUN_scripts_generate_secrets_py
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (CHANGE IN PRODUCTION - run: python scripts/generate_secrets.py)
ENCRYPTION_KEY=CHANGE_ME_RUN_scripts_generate_secrets_py

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# AI Services
GROQ_API_KEY=your-groq-api-key

# CORS (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Monitoring (optional)
SENTRY_DSN=

# Server
HOST=0.0.0.0
PORT=8000
